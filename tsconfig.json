{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "build",
    "paths": {
      "*": ["node_modules/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}